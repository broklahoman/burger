<h1>Burgers</h1>

<h2>On the Menu</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button type="submit">Eat this burger, please!</button>
        </form>
      </li>
    {{/unless}}
  {{/each}}
</ul>
